/* pages/sing/sing.wxss */
@import "../../wxParse/wxParse.wxss";
rich-text{
    display:block;
    line-height:1.8;
    font-size:30rpx;
    text-align:justify;
    margin-bottom:20rpx;
    width:100%;
    max-width:100%;
}
.html{margin:0 50rpx;
padding-bottom:40rpx;}
rich-text p{
    font-size:122rpx;
    line-height:1.5;
    text-align:justify;
    margin-bottom:230rpx;
}
rich-text img{
    width:100rpx !important;
}
.sing-title{
    font-size:50rpx;
    font-weight:700;
    line-height:1.5;
}
.sing-time{
    font-size:25rpx;
    color:#888;
    margin-top:20rpx;
}
.sing-head{
    margin:30rpx 0;
}

.sing-bar{
    position:fixed;
    right:0;
    left:0;
    bottom:0;

    background:#222;
    display: flex;
    align-items:center;
    justify-content:space-between;
    z-index:100;
}
.sing-bar.iphonex{
    padding-bottom:40rpx;
}
.sing-bar .ico{
    font-size:52rpx;
    color:#ccc;
     padding:0 30rpx;
     line-height:110rpx;
     transition:.2s ease;
}
.sing-bar .ico.fav{
    color:#fff;
}
.sing-tool{
    display: flex;
    align-items:center;
    margin-left:20rpx;
}
.sing-scroll{
    position:fixed;
    left:0;top:0;right:0;
    bottom:0;
}
.share{
    background: transparent;
}
.share:before{
    border:none;
}